{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "baseUrl": "./",
    "paths": {
      "common/*": ["src/common/*"],
      "interfaces/*": ["src/interfaces/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}